{
  // Disable validation for CSS preprocessors (Tailwind is primary)
  "css.validate": false,
  "scss.validate": false,
  "less.validate": false,

  // Enable quick suggestions inside strings (for Tailwind class autocomplete)
  "editor.quickSuggestions": {
    "strings": true
  },

  // Tailwind CSS class detection for clsx and cn utilities
  "tailwindCSS.experimental.classRegex": [
    ["clsx\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cn\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],

  // Tailwind CSS language support
  "tailwindCSS.includeLanguages": {
    "javascript": "html",
    "typescript": "html",
    "javascriptreact": "html",
    "typescriptreact": "html"
  },

  // Format on save using Prettier (if installed)
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Auto-update imports when files are moved
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always"
}
